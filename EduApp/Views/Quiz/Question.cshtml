@using EduApp.ViewModels
@model QuestionDto

@{
    ViewData["Title"] = "Quiz Question";
}

<div class="card mx-auto mt-5" style="max-width: 500px;">
    <div class="card-body">

        <p class="card-text fw-semibold">
            @Model.Text
        </p>
        <form asp-action="Question" asp-route-quizId="@Model.QuizId" method="post">

            <input type="hidden" asp-for="AttemptId" />
            <input type="hidden" asp-for="QuestionIndex" />
            <input type="hidden" asp-for="QuizId" />
            <input type="hidden" asp-for="Text" />

            @for (int i = 0; i < Model.Answers.Count; i++)
            {
                <div class="form-check mb-2">
                    <input class="form-check-input"
                           type="radio"
                           asp-for="SelectedAnswerIndex"
                           value="@i"
                           id="answer_@i" />

                    <label class="form-check-label" for="answer_@i">
                        @Model.Answers[i]
                    </label>
                </div>
            }

            <span asp-validation-for="SelectedAnswerIndex"
                  class="text-danger"></span>

            <button type="submit" class="btn btn-primary mt-3 w-100">
                Next →
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
